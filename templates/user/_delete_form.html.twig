<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression de cet utilisateur ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button style="width: 100%;margin-top: 15px;margin-bottom: 15px;font-size: 21px;font-weight: bolder;" class="btn btn-danger">Supprimer</button>
</form>
