{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/accueil.css') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alumni+Sans+Collegiate+One&display=swap" rel="stylesheet">
{% endblock %}


{% block title %}ADMIN Categorie{% endblock %}

{% block body %}
    <section class="jumbotron text-center"
             style="background: url({{ asset('assets/img/videos/GIF/colorfulbar.gif') }});
                     background-repeat: no-repeat;
                     background-size: cover;
                     margin-bottom: 0px;
                     font-size: 35px">
    </section>
    <h1 style="text-align: center;text-decoration-line: underline">Détails Categorie:</h1>

    <table class="table">
        <tbody style="text-align: center">
            <tr>
                <th>Id :</th>
                <td style="background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(193,193,193,1) 100%);text-align: center">{{ category.id }}</td>

            </tr>
            <tr>
                <th>Nom du produit :</th>
                <td style="background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(193,193,193,1) 100%);text-align: center">{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a style="display: flex;flex-wrap: nowrap;justify-content: center;margin-top: 15px;margin-bottom: 15px" class="btn btn-success" href="{{ path('app_category_edit', {'id': category.id}) }}">Editer</a>

    <a style="display: flex;flex-wrap: nowrap;justify-content: center" class="btn btn-primary" href="{{ path('app_category_index') }}">Retour à la liste</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
